@model IEnumerable<TrainingProviderViewModels.IndexViewModel>

@section Title{
    Training Providers
}

<h2>Training Providers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-condensed table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentLogo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdateFrequencyHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllowedUpdateUtcHoursString)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteUrl)
            </td>
            <td>
                <img height="20" src="@item.CurrentLogo.LocalUrl" title="@item.CurrentLogo.FileName"/>
            </td>
            <td>
                @Html.DisplayFor(m => item.UpdateFrequencyHours)
            </td>
            <td>
                @Html.DisplayFor(m => item.AllowedUpdateUtcHoursString)
            </td>
            <td>
                @Html.DisplayFor(m => item.IsDeleted)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
