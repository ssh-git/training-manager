@model SpecializationsListViewModel
@section Title{
    Change Specializations
}

<h2>Change Specializations</h2>

@using (Html.BeginForm("ChangeSpecializations", "Manage", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedSpecializationTitles, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxListFor(m => m.SelectedSpecializationTitles, Model.SpecializationsSelectList)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Change" />
        </div>
    </div>
}