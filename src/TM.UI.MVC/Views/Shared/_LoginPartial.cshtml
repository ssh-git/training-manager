@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = string.Empty }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Profile<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li role="presentation" class="dropdown-header">@User.Identity.GetUserName()</li>
                    <li role="presentation">@Html.ActionLink("Change Password", "ChangePassword", "Manage", new { area = string.Empty }, null)</li>
                    <li role="presentation">@Html.ActionLink("Change Specializations", "ChangeSpecializations", "Manage", new { area = string.Empty }, new { id = "tm-change-specializations" })</li>
                    <li role="presentation"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                </ul>
            </li>
        </ul>
    }
} else
{
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Log in", "Login", "Account", new {area = string.Empty}, new { id = "loginLink" })</li>
        </ul>
}
